
@{
    ViewData["Title"] = "DummyCarousel";
}
<link rel="stylesheet" href="~/css/DummyCarousel.css" />

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner vw-100 vh-100">
        <div class="carousel-item active">
            <img src="~/images/fall-winding-road.jpeg" class="d-block w-100" alt="...">
            <div class="carousel-caption">
                <h1 class="display-1">This is my carousel page</h1>
                <p class="display-4">It took a while to get working</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/wood-background.jpg" class="gradient d-block w-100" alt="...">
            <div class="carousel-caption">
                <h1 class="display-1">Text Text Text Text</h1>
                <p class="display-4">Some more text down heeeeeeeeeere</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/blurred-pexels.jpeg" class="d-block w-100" alt="...">
            <div class="carousel-caption">
                <h1 class="display-1">Last page of text</h1>
                <p class="display-4">Word of wisdom... when your bootstrap carousel isn't working, make sure you 
                are also referencing jQuery. Duh</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

